{% extends 'base.html.twig' %}

{% block title %}Page de {{user.username}}{% endblock %}

{% block stylesheets %}
        <link rel="stylesheet" href="/css/user_show.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3">
                <img src="{{user.picture}}" class="avatar m-3" alt="avatar de {{user.username}}"><br>
                <span class="badge badge-primary">{{user.punches | length}} punchs</span>
            </div>
            <div class="col-9">
                <h1 class="text-white">{{user.username}}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier le profil</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-2 mb-2">Modifier le mot de passe</a>

                    </div>
                {% endif %}
            </div>
        </div>

        {{user.description}}

        <hr>

        <h2 class="text-white">Les punchs de {{user.username}}</h2>

        {% if user.punches |length > 0 %}
        <div class="row justify-content-center">
            {% for punch in user.punches %}
                {% include 'punch/_punch.html.twig' %}
            {% endfor %}
        </div>

        {% else %}
            <div class="alert alert-warning">
                <p>
                    <strong>{{user.username}}</strong> n'a pas la moindre punch Ã  son actif miskin !
                </p>
            </div>
        {% endif %}

    </div>
{% endblock %}
