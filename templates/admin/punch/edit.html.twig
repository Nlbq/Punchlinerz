{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce num√©ro {{punch.id}} {% endblock %}

{% block body %}
<div class="container col-md-10">
  <h2 class="text-center mt-3">Modification de l'annonce de {{punch.author.username}}</h2>

  {{  form_start(form) }}

  <div class="row">
    <div class="col">
      <div class="card bg-dark p-3 mt-5">
        <div class="card-header">
          <h4 class="card-title text-center m-0">Corriger la punch'</h4>
        </div >
        <div class="card-body"></div>
          {{  form_widget(form) }}

          <button type="submit" class="btn btn-success col-3 mx-auto my-2">
            Valider
          </button>
        </div>
      </div>
    <div class="col">
      <div class="card bg-dark p-3 mt-5">
        <div class="card-header">
          <h4 class="card-title text-center m-0">Les commentaires</h4>
        </div >
        <div class="card-body">
        <table class="table text-center">
          <thead>
            <tr>
              <th class="">Id</th>
              <th class="">Auteur</th>
              <th class="">Note</th>
              <th class="col-8">Contenu</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for comment in punch.comments %}
            <tr>
              <td>{{comment.id}}</td>
              <td>{{comment.author.username}}</td>
              <td>{{comment.rating}}</td>
              <td>{{comment.content}}</td>
              <td>
                <a href="{{ path('admin_comments_edit', {'id': comment.id}) }}">
                  <i class="bi bi-pencil-square"></i>
                </a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


  {{  form_end(form) }}

</div>
{% endblock %}
