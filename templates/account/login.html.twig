{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container  border rounded m-5 p-5">
    <div class="row col-12">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light p-3 border rounded">
                <h1 class="text-success m-4 pb-3 text-center">Connectez-vous!</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Tu fais pas d'efforts, renseigne des infos valides</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" name="_username" id="" class="form-control" id="username" placeholder="Renseigne ton blase jeune entrepreneur ..." required value="{{username}}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="" class="form-control" id="password" placeholder="Renseigne ton mdp fdp ..." required>
                    </div>
                    <div class="form-group text-center">
                    <button type="submit" class="btn btn-success m-3 p-2">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
