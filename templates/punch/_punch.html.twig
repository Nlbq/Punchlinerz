{% set url = path('punchs_show', {'id' : punch.id}) %}

<a href="{{ url }}" style="text-decoration: none;">

    <div class="card bg-secondary disabled col-md-8 p-0 text-center m-2 punch-cards">
        <div class="card-header d-flex  text-warning ">
            <p class="mb-0">{{punch.theme|capitalize}}</p>
            <p class="ms-auto mb-0">{{punch.author.username|capitalize}}</p>
        </div>
        <div class="card-body p-1">

            <h5 class="card-text p-2 text-white">{{punch.content|capitalize}}</h5>
        </div>
        <div class="card-footer d-flex ">
            <small class="ms-autos  text-warning">{{punch.date|date("d/m/Y")}}</small>

            <a href="{{ url }}" class=" btn btn-secondary m-1  ms-auto text-white">Afficher</a>

            {% if app.user and app.user == punch.author %}
            <a href="{{ path('punchs_edit', {'id': punch.id}) }}" class="btn btn-secondary m-1">Modifier</a>
            {% endif %}
        </div>


    </div>

</a>