{% extends 'base.html.twig' %}

{% block title %}Les punch'{% endblock %}

{% block body %}
<h1 class="text-center">Voici les punchs de la commu des behloul</h1>

<div class="row justify-content-center">
{% for punch in punchs %}
    {% set url = path('punchs_show', {'id' : punch.id}) %}

    <a href="{{ url }}">
        <div class="card bg-primary text-white col-md-5 p-0 text-center m-2 punch-cards">
            <div class="card-header">
                {{punch.theme|capitalize}}
            </div>
            <div class="card-body p-2">
                <p class="card-text p-3">{{punch.content|capitalize}}</p>
                <a href="{{ url }}" class="btn btn-primary">Afficher</a>
            </div>
            <div class="card-footer">
                <small class="">{{punch.date|date("d/m/Y")}}</small>
            </div>
        </div>
    </a>
{% endfor %}
</div>

{% endblock %}
